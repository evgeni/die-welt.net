## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*" />
<%namespace name="notes" file="annotation_helper.tmpl" import="*" />
${set_locale(lang)}
${base.html_headstart()}
<%block name="extra_head">
### Leave this block alone.
</%block>
${template_hooks['extra_head']()}
</head>
<body>
<a href="#content" class="sr-only sr-only-focusable">${messages("Skip to main content")}</a>

<section id="head">
<!-- Menubar -->

<nav class="overlay navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container"><!-- This keeps the margins nice -->

<div>
                        <div class="social-wrapper">
                            <a href="https://plus.google.com/+EvgeniGolov/" class="btn btn-social" title="Evgeni Golov (Zhenech) on Google+">
                                <i class="fa fa-google-plus fa-2x"></i></a>
                            <a href="https://twitter.com/Zhenech" class="btn btn-social" title="Evgeni Golov (Zhenech) on Twitter">
                                <i class="fa fa-twitter fa-2x"></i></a>
                            <a href="https://github.com/evgeni" class="btn btn-social" title="Evgeni Golov (Zhenech) on GitHub">
                                <i class="fa fa-github fa-2x"></i></a>
                            <a href="/pix/" class="btn btn-social" title="Pictures">
                                <i class="fa fa-camera fa-2x"></i></a>
                            <a href="/about/" class="btn btn-social" title="About">
                                <i class="fa fa-info fa-2x"></i></a>
                            <a href="/projects/" class="btn btn-social" title="Projects">
                                <i class="fa fa-rocket fa-2x"></i></a>
                            <a href="/archive.html" class="btn btn-social" title="Archive">
                                <i class="fa fa-archive fa-2x"></i></a>
                            <a href="/categories/" class="btn btn-social" title="Tags">
                                <i class="fa fa-tags fa-2x"></i></a>
                            <a href="/rss.xml" class="btn btn-social" title="RSS">
                                <i class="fa fa-rss fa-2x"></i></a>
                        </div>
            <a class="logo" href="${abs_link(_link("root", None, lang))}">
            %if logo_url:
                <img src="${logo_url}" alt="${blog_title}" id="logo">
            %endif

            %if show_blog_title:
                <h1 id="blog-title">${blog_title}</h1>
            %endif
            </a>

            %if blog_description:
            <p>${blog_description}</p>
            %endif
</div>


        <div class="collapse navbar-collapse" id="bs-navbar" aria-expanded="false">
            <ul class="nav navbar-nav">
                ${base.html_navigation_links()}
                ${template_hooks['menu']()}
            </ul>
            %if search_form:
                ${search_form}
            %endif

            <ul class="nav navbar-nav navbar-right">
                <%block name="belowtitle">
                %if len(translations) > 1:
                    <li>${base.html_translations()}</li>
                %endif
                </%block>
                % if show_sourcelink:
                    <%block name="sourcelink"></%block>
                %endif
                ${template_hooks['menu_alt']()}
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container -->
</nav>

<!-- End of Menubar -->
</section>

<div class="container" id="content" role="main">
    <div class="body-content">
        <!--Body content-->
        <div class="row">
            ${template_hooks['page_header']()}
            <%block name="content"></%block>
        </div>
        <!--End of body content-->
    </div>
</div>

        <footer id="footer">
<div class="container">
            ${content_footer}
            ${template_hooks['page_footer']()}
</div>
        </footer>

${base.late_load_js()}
    <script>$('a.image-reference:not(.islink) img:not(.islink)').parent().colorbox({rel:"gal",maxWidth:"100%",maxHeight:"100%",scalePhotos:true});</script>
    <!-- fancy dates -->
    <script>
    moment.locale("${momentjs_locales[lang]}");
    fancydates(${date_fanciness}, ${js_date_format});
    </script>
    <!-- end fancy dates -->
    <%block name="extra_js"></%block>
    % if annotations and post and not post.meta('noannotations'):
        ${notes.code()}
    % elif not annotations and post and post.meta('annotations'):
        ${notes.code()}
    % endif
${body_end}
${template_hooks['body_end']()}
</body>
</html>
